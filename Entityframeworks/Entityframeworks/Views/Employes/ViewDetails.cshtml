@model Entityframeworks.Models.Employee
<div class="container">
        <div class="card">
            <div class="crad-header">
                <h1 class="text-center text-primary">Add Employee</h1>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ViewDetails">
                        <div class="form-group mt-3">
                        <lable asp-for="Name">Name</lable>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                        <span  asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3 ">
                        <lable asp-for="Email">Email</lable>
                        <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <lable asp-for="Age">Age</lable>
                        <input type="text" asp-for="Age" class="form-control" placeholder="Enter Age" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <lable asp-for="Address">Address</lable>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>

