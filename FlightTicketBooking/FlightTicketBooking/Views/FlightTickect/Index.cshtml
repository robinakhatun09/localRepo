    <script>
        function search() {
          
            var from = document.getElementById("City").value;
            var to = document.getElementById("Citi").value;

            var city= localStorage.getItem("location");
            if (city != " ") {
                localStorage.removeItem("location");
            }
            localStorage.setItem("location", from + " " + to);
            return window.location.href = "/FlightTickect/Flight"
        }
        $(document).ready(function () {
            var Countries = $("#City").kendoDropDownList({
                optionLabel: "Select Country...",
                dataTextField: "departureCity",
                dataValueField: "departureCity",
                dataSource: {
                    dataType: "json",
                    transport: {
                        read: "/FlightTickect/FlightData"
                    }
                }
            }).data("kendoDropDownList");
            var Countries = $("#Citi").kendoDropDownList({
                optionLabel: "Select Country...",
                dataTextField: "arrivalCity",
                dataValueField: "arrivalCity",
                dataSource: {
                    dataType: "json",
                    transport: {
                        read: "/FlightTickect/FlightData"
                    }
                }
            }).data("kendoDropDownList");           
            $("#flightSearchForm").submit(function (e) {
                e.preventDefault();
                console.log("Submit button clicked!");
                var formData = {
                    City: $("#City").val(),
                    Citi: $("#Citi").val()                  
                };
                $.ajax({
                    url: "/FlightTickect/SearchFlights",
                    type: "POST",
                    data: formData,
                    success: function (response) {
                        console.log(response);                       
                    },
                    error: function (error) {
                        console.error(error);
                    }
                });
            });
        });
    </script>
