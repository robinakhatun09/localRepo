@model FirstAssesment.Models.Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <title>Registration Page</title>
</head>
<body>
    <style>
        input[type="text"], input[type="email"], input[type="password"], input[type="number"] {
            background: transparent;
            border: black;
            border-bottom: 1px solid #fff;
            border-radius: 0;
            color: black;
            box-shadow: none;
        }

            input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus, input[type="number"]:focus {
                background: transparent;
                border-bottom: 1px solid #FAEBD7;
                border-radius: 0;
                outline: none;
                color: black;
                box-shadow: none;
            }

        .img-fluid {
            height: 100%;
        }

        .btn {
            width: 100%;
            background-color: burlywood;
        }

        span {
            color: red;
        }

        body {
            background-color: antiquewhite;
            background-image: url('https://wallpapers.com/images/hd/jewellery-background-2000-x-2000-xinfovukq7ve3lh3.jpg');
            background-size: cover;
            background-position: center;
            
        }

    </style>
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <img src="https://static.wixstatic.com/media/57b89c_a9150f77db504fb68fa01349ccac1a78~mv2.png/v1/fit/w_320%2Ch_1000%2Cal_c,enc_auto/file.png" alt="Image" class="img-fluid">
                    </div>
                    <div class="col-md-6">
                        <h2 class="mb-4">Create an Account</h2>
                        <form method="post" asp-controller="View" asp-action="Register">
                            <div class="form-floating">
                                <input type="text" asp-for="Username" class="form-control" id="username">
                                <label asp-for="Username">Username</label>
                                <span id="usercheck"> </span>
                            </div>
                            <div class="form-floating">
                                <input type="email" asp-for="Email" class="form-control" id="email">
                                <label asp-for="Email">Email address</label>
                                <span id="emailcheck"> </span>
                            </div>
                            <div class="form-floating">
                                <input type="number" asp-for="Contact" class="form-control" id="phone">
                                <label asp-for="Contact">Contact</label>
                                <span id="phonecheck"> </span>
                            </div>
                            <div class="form-floating">
                                <input type="password" asp-for="Password" class="form-control" id="password">
                                <label asp-for="Password">Password</label>
                                <span id="passcheck"> </span>
                            </div>
                            <div class="form-floating">
                                <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm your password">
                                <label asp-for="ConfirmPassword">Confirm_Password</label>
                                <span id="conpasscheck"> </span>
                            </div>
                            <div class="form-group form-check mt-3">
                                <input type="checkbox" class="form-check-input" id="agreeTerms">
                                <label class="form-check-label" for="agreeTerms">I agree to the terms of use and privacy statement</label>
                            </div>
                            <button type="submit" class="btn " id="submit_btn" value="submit">Register Now</button>
                        </form>
                        <p class="mt-3">Already have an account? <a href="/View/Login">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#username, #email, #password, #confirmPassword #flexCheckDefault").keyup(function () {
            validateForm();

        });
        function validateForm() {
            var valu = true;
            var name = $("#username").val();
            var e_mail = $("#email").val();
            var contact = $("#phone").val();
            var pswd = $("#password").val();
            var cpswd = $("#confirmPassword").val();

            if (name == "") {
                $("#usercheck").text("****please fill username");
                valu = false;
            }
            else {
                $("#usercheck").text("");
            }
            var email_exp = /^\S+@@\S+\.\S+$/;
            if ($("#email").val().match(email_exp)) {
                $("#emailcheck").text("");
            }
            else if ($("#email").val() == "") {
                $("#emailcheck").text("****Please fill email");
                valu = false;
            }
            else {
                $("#emailcheck").text("****Invalid Email");
                valu = false;
            }
            if ($("#phone").val() == "") {
                $("#phonecheck").text("****Please fill Number");
                valu = false;
            }

            else if ($("#phone").val().length != 10) {
                $("#phonecheck").text("****Invalid Contact");
                valu = false;
            }
            else {
                $("#phonecheck").text("");
            }
            var password_exp = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}$/;
            if ($("#password").val().match(password_exp)) {
                $("#passcheck").text("");
            }
            else if ($("#password").val() == "") {
                $("#passcheck").text("****Please fill password");
                valu = false;
            }
            else {
                $("#passcheck").text("****invalid password");

                valu = false;
            }
            if ($("#confirmPassword").val() == "") {
                $("#conpasscheck").text("**Please fill Confirm password");
                valu = false;

            } else {
                $("#conpasscheck").text("");


                if (pswd != cpswd) {
                    $("#errormsg").text("***Password not match");
                    valu = false;
                }
                else {
                    $("#errormsg").text("");
                }
            }
            if (valu) {
                const alrt_detail = `Username : ${name}\n
                                    Email : ${e_mail}\n`;
                alert("Form Details:\n" + alrt_detail);
            }
        }
        $("#submit_btn").click(function () {
            validateForm();
        });
    </script>

</body>
</html>
