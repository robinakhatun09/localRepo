@model session.mvcProject.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://kendo.cdn.telerik.com/themes/7.0.2/default/default-main.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.2.829/js/kendo.all.min.js" type="module"></script>
</head>
<body translate="no">
    <div class="dark-button"></div>
    <div class="app">
        <div class="container__form signup">
            <form class="form" method="post" asp-controller="Admin" asp-action="Register">
                <h2 class="form__title">Sign Up</h2>
                <input asp-for="Name" type="text" id="Name" placeholder="User" class="input" required />
                <input asp-for="Email" type="email" id="Email" placeholder="Email" class="input" required />
                <input asp-for="Contact" type="number" id="Contact" placeholder="Contact" class="input" required />
                <input asp-for="Course" id="Courses" id="Course" placeholder="Course" class="input" required />
                <input asp-for="Batch" id="Batch" id="Batch" placeholder="Batch" class="input" required />
                <input asp-for="Password" id="Password" type="password" placeholder="Password" class="input" required />
                <input asp-for="ConfirmPassword" id="Confirmpassword" type="password" placeholder="ConfirmPassword" class="input" required />
                <div>
                    <input type="checkbox" class="form-check-input" id="agreeTerms">
                    <label class="form-check-label" for="agreeTerms">I agree to the terms of use</label>
                </div>
                <button type="submit" class="submit_btn">Sign Up</button>
            </form>
        </div>
        <div class="container__form signin">
            <form class="form" asp-controller="Admin" asp-action="Login">
                <h2 class="form__title">Sign In</h2>
                <input type="email" asp-for="Email" placeholder="Email" class="input" />
                <input type="password" asp-for="Password" placeholder="Password" class="input" />
                <button type="submit" class="btn">Sign In</button>
            </form>
        </div>
        <div class="app-hide">
            <div class="overlay">
                <div class="panel overlay-in">
                    <button class="btn" id="signUp">Sign In</button>
                </div>
                <div class="panel overlay-up">
                    <button class="btn" id="signIn">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            debugger;
            var Courses = $("#Courses").kendoDropDownList({
                optionLabel: "Select Course...",
                dataTextField: "courseName",
                dataValueField: "courseId",
                dataSource: {
                    serverFiltering: true,
                    dataType: "json",
                    transport: {
                        read: "/Admin/CourseData"
                    }
                }
            }).data("kendoDropDownList");

            var States = $("#Batch").kendoDropDownList({
                cascadeFrom: "Courses",
                optionLabel: "Select Batch...",
                dataTextField: "batchName",
                dataValueField: "batchId",
                dataSource: {
                    dataType: "json",
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: "/Admin/BatchData",
                            data: function () {
                                return {
                                    id:Courses.value()
                                };
                            }
                        }
                    }
                }
            }).data("kendoDropDownList");
        });
    </script>
    <script>
        let signInBtn = document.getElementById("signIn");
        let signUpBtn = document.getElementById("signUp");
        let forgotPasswordLink = document.getElementById("forgotPasswordLink");
        let backToSignInLink = document.getElementById("backToSignIn");
        let app = document.querySelector(".app");
        signInBtn.addEventListener("click", () => {
            app.classList.remove("swap");
        });
        signUpBtn.addEventListener("click", () => {
            app.classList.add("swap");
        });       
    </script>

    <style>
        body {
            background-image: url(https://img.freepik.com/free-vector/hand-painted-watercolor-pastel-sky-background_23-2148902771.jpg);
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 5em;
            min-height: 100vh;
        }

        .app {
            border-radius: 14px;
            padding: 6em;
            padding-left: 700px;
            width: 100%;
            height: 90vh;
            max-width: 750px;
            max-height: 650px;
            display: flex;
            justify-content: center;
            align-items: center;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            font-size: 15px;
            font-weight: 500;
            margin-left: 180px;
        }

        .form__title {
            font-weight: 400;
            margin: 0;
            margin-bottom: 1.25rem;
        }

        .link {
            color: var(--gray);
            font-size: 0.9rem;
            margin: 1.5rem 0;
            text-decoration: none;
        }

        .container__form {
            height: 100%;
            position: absolute;
            top: 0;
            transition: all 0.6s ease-in-out;
        }

        .signup {
            left: 0;
            width: 50%;
            z-index: 2;
        }

        .app.swap .signup {
            transform: translateX(100%);
            opacity: 0;
        }

        .signin {
            left: 0;
            opacity: 0;
            width: 50%;
            z-index: 1;
        }

        .app.swap .signin {
            -webkit-animation: show 0.6s;
            animation: show 0.6s;
            opacity: 1;
            transform: translateX(100%);
            z-index: 5;
        }

        .app-hide {
            height: 100%;
            left: 50%;
            overflow: hidden;
            position: absolute;
            top: 0;
            transition: transform 0.6s ease-in-out;
            width: 50%;
            z-index: 100;
        }

        .app.swap .app-hide {
            transform: translateX(-100%);
        }

        .overlay {
            background: url("https://img.freepik.com/free-vector/hand-painted-watercolor-pastel-sky-background_23-2148902771.jpg");
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100%;
            left: -100%;
            position: relative;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
            width: 200%;
        }

        .app.swap .overlay {
            transform: translateX(50%);
        }

        .panel {
            align-items: center;
            display: flex;
            flex-direction: column;
            height: 100%;
            justify-content: center;
            position: absolute;
            text-align: center;
            top: 0;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
            width: 50%;
        }

        .overlay-up {
            transform: translateX(-20%);
        }

        .app.swap .overlay-up {
            transform: translateX(0);
        }

        .overlay-in {
            right: 0;
            transform: translateX(0);
        }

        .app.swap .overlay-in {
            transform: translateX(20%);
        }

        .form {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 3rem;
            height: 100%;
            text-align: center;
        }

        .input {
            background-color: #fff;
            border: none;
            padding: 0.9rem 0.9rem;
            margin: 0.5rem 0;
            width: 100%;
            border-radius: 10px;
        }

        #signUp {
            font-size: 30px;
        }

        #signIn {
            font-size: 30px;
        }
    </style>
</body>
</html>



